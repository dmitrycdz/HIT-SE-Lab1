          </Menu>
        </menus>
      </MenuBar>
      <HBox prefHeight="1000.0" prefWidth="200.0">
         <children>
            <ScrollPane prefHeight="748.0" prefWidth="780.0">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="1000.0" prefWidth="1000.0">
                     <children>
                        <MenuButton minWidth="-Infinity" mnemonicParsing="false" prefHeight="30.0" prefWidth="30.0" text="MenuButton">
                          <items>
                            <MenuItem mnemonicParsing="false" text="画布绘图" />
                            <MenuItem mnemonicParsing="false" text="Graphviz绘图" />
                          </items>
                        </MenuButton>
                        <Canvas fx:id="canvas" height="1000.0" width="1000.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
                     </children>
                  </AnchorPane>
              </content>
               <HBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </HBox.margin>
            </ScrollPane>
            <VBox prefHeight="200.0" prefWidth="400.0">
               <children>
                  <TextFlow maxHeight="-Infinity" minHeight="-Infinity" prefHeight="32.0" prefWidth="200.0" style="-fx-background-color: #F0F0F0; -fx-border-color: darkgray;" textAlignment="CENTER">
